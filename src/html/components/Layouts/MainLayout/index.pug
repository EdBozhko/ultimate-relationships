block mainLayoutVariables

doctype html
html(lang='en' id='html' class='{isFullScreen}')
    head
        link(rel="preconnect" href="https://adverster.b-cdn.net") 
        script(src="https://adverster.b-cdn.net/scripts/_mechanics/_mechanics.min.js" defer) 
        <!-- =========== Meta tags =========== -->
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='user-scalable=no, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0')
        meta(http-equiv="Cache-control" content="public")
        meta(name="keywords" content!=pageMetaData.keywords)
        meta(name="description" content!=pageMetaData.description)
        title!=pageMetaData.title 
        <!-- =========== End Meta tags =========== -->

        link(rel="shortcut icon", href=pageMetaData.faviconSrc, type="image/x-icon")
        link(rel='stylesheet' href='{projectPath}/css/style.min.css')
    body(id='body' class='{isFullScreen}')

        div(class='mobile-landscape-warning')
            div(class='mobile-landscape-warning__box')
                div(class='mobile-landscape-warning__icon-box')
                p Please rotate your device for a better experience

        include ../../Header/index.pug

        main
            block mainLayoutContent

        script(src="{projectPath}/js/main.min.js" defer) 

